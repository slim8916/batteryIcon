<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>

  <object class="GtkBox" id="main_box">
    <property name="orientation">vertical</property>
    <property name="spacing">4</property>
    <property name="hexpand">false</property>
    <property name="vexpand">false</property>
    <property name="margin-bottom">0</property>
    
    <child>
      <object class="GtkLabel" id="placeholder_label">
        <property name="label">Select the threshold to hide the battery icon while the device is</property>
        <property name="wrap">true</property>
        <property name="xalign">0</property>
      </object>
    </child>

    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="spacing">20</property>

        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">10</property>
        
            <child>
              <object class="GtkLabel">
                <property name="label">Charging</property>
                <property name="xalign">0</property>
                <property name="yalign">0.5</property>
              </object>
            </child>
            <child>
              <object class="GtkScale" id="charging_slider">
                <property name="orientation">horizontal</property>
                <property name="draw-value">true</property>
                <property name="hexpand">true</property>
              </object>
            </child>
        
          </object>
        </child>
        
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">10</property>
        
            <child>
              <object class="GtkLabel">
                <property name="label">Discharging</property>
                <property name="xalign">0</property>
                <property name="yalign">0.5</property>
              </object>
            </child>
            <child>
              <object class="GtkScale" id="discharging_slider">
                <property name="orientation">horizontal</property>
                <property name="draw-value">true</property>
                <property name="hexpand">true</property>
              </object>
            </child>
        
          </object>
        </child>    

      </object>
    </child>
  </object>
</interface>
